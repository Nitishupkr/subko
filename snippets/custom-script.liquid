<style>
  .custom-modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }
  .custom-modal.show {display:block;}
  .custom-modal-content {
    position: absolute;
    left: 50%;
    transform: translate(-50%, -65%);
    top: 35%;
    background-color: #fef9e9;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .custom-modal.show .custom-modal-content {
    opacity: 1;
  }
  .custom-close {
    color: #aaa;
    position: absolute;
    font-size: 36px;
    font-weight: 400;
    top: 0px;
    right: 12px;
}
  .custom-close:hover,
  .custom-close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    var modalBtns = document.querySelectorAll(".modal_elem .modalBtn");
    var modals = document.querySelectorAll(".custom-modal");

    modalBtns.forEach(function(btn, index) {
      btn.addEventListener("click", function() {
        closeModal();
        modals[index].classList.add("show");
      });
    });

    function closeModal() {
      modals.forEach(function(modal) {
        modal.classList.remove("show");
      });
    }

    var closeBtns = document.querySelectorAll(".custom-close");
    closeBtns.forEach(function(btn) {
      btn.addEventListener("click", function() {
        closeModal();
      });
    });

    window.onclick = function(event) {
      if (event.target.classList.contains('custom-modal')) {
        closeModal();
      }
    };
  });
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
  $(document).ready(function() {
      $('.modalMediaNav').each(function() {
          var $modalMediaNav = $(this);
          $modalMediaNav.find('.mNavthumbImages').click(function() {
              var newSrc = $(this).attr('src');
              $modalMediaNav.find('.mNavFeaturedImage').attr('src', newSrc);
          });
      });
  });
</script>