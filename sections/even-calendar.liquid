{% schema %}
{
  "name": "Bulk Order Section",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Easy Bulk Order Delivery to Mumbai"
    },
    {
      "type": "textarea",
      "id": "subheading_text",
      "label": "Subheading Text",
      "default": "For any enquiries contact us by filling this form. We will reply as soon as possible."
    }
  ]
}
{% endschema %}

<div class="dynamic-color-section">
  <div class="content-wrapper">
    <div class="text-content">
      <h1>{{ settings.heading_text }}</h1>
      <p>{{ settings.subheading_text }}</p>
      <div class="mumbai-icon"></div>
    </div>
    <div class="form-content">
      <h2>Fill in your Details</h2>
      <p>{{ settings.subheading_text }}</p>
      <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8" class="contact-form">
        <input type="hidden" name="form_type" value="contact" />
        <input type="hidden" name="utf8" value="âœ“" />
        <div class="form-group">
          <input type="text" name="contact[name]" placeholder="Name" required>
        </div>
        <div class="form-group">
          <input type="text" name="contact[phone]" placeholder="Contact *" required>
        </div>
        <div class="form-group">
          <input type="email" name="contact[email]" placeholder="Email *" required>
        </div>
        <div class="form-group">
          <textarea name="contact[body]" placeholder="Message" required></textarea>
        </div>
        <button type="submit" class="btn">Request Order</button>
      </form>
    </div>
  </div>
</div>

<style>
.dynamic-color-section {
  padding: 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: background-color 1s;
}
.content-wrapper {
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.text-content {
  max-width: 50%;
}
.text-content h1 {
  font-size: 48px;
  font-weight: bold;
}
.text-content p {
  font-size: 16px;
  margin-top: 10px;
}
.form-content {
  background: #fff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  max-width: 400px;
  width: 100%;
}
.form-content h2 {
  margin-bottom: 10px;
}
.form-content p {
  margin-bottom: 20px;
  font-size: 14px;
  color: #666;
}
.form-group {
  margin-bottom: 15px;
}
.form-group input,
.form-group textarea {
  width: 100%;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}
.form-group textarea {
  height: 100px;
}
.btn {
  background-color: #333;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
.btn:hover {
  background-color: #555;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  var section = document.querySelector('.dynamic-color-section');
  var colors = ['#FFDDC1', '#FFABAB', '#FFC3A0', '#FF677D', '#D4A5A5', '#392F5A'];
  var index = 0;

  function changeColor() {
    section.style.backgroundColor = colors[index];
    index = (index + 1) % colors.length;
  }

  setInterval(changeColor, 1000);
});
</script>
