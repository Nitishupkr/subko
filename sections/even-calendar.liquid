<section class="dynamic-section">
    <div class="left-column">
        <h2 id="dynamic-heading-left">{{ section.settings.dynamic_heading_left }}</h2>
    </div>
    <div class="right-column">
        <form class="b2b-enquiry-form">
            <!-- Your B2B enquiry form HTML goes here -->
        </form>
    </div>
</section>

<style>
    .dynamic-section {
        background-color: {{ section.settings.initial_background_color }}; /* Your initial background color */
        /* Add other CSS styles as needed */
    }

    .green { background-color: #55AF7C; color: #3c763d; }
    .red { background-color: #E08889; color: #a94442; }
    .blue { background-color: #789DBF; color: #31708f; }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var dynamicHeadingLeft = document.getElementById('dynamic-heading-left');
        var colors = ['#55AF7C', '#E08889', '#789DBF']; // List of your dynamic background colors
        var texts = [ /* List of your dynamic heading texts */ ];
        var colorIndex = 0;
        var textIndex = 0;

        function changeBackground() {
            document.querySelector('.dynamic-section').style.backgroundColor = colors[colorIndex];
            colorIndex = (colorIndex + 1) % colors.length;
            setTimeout(changeBackground, 1000); // Change every second (1000ms)
        }

        function changeHeadingText() {
            dynamicHeadingLeft.textContent = texts[textIndex];
            textIndex = (textIndex + 1) % texts.length;
            setTimeout(changeHeadingText, 2000); // Change every 2 seconds (2000ms)
        }

        // Initialize
        changeBackground();
        changeHeadingText();
    });
</script>
