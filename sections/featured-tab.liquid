        },
        {
          "type": "tab",
          "settings": {
            "tab_label": "Tab 2",
            "collection": "",
            "heading": "Featured Collection",
            "subheading": "Showcase your best products",
            "products_number": 4,
            "show_view_all": true
          }
        }
      ]
    }
  ]
}
