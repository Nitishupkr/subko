<!-- Calendar Styles -->
<style>
  .calendar-container {
    font-family: Arial, sans-serif;
    max-width: 100%;
    margin: auto;
    text-align: center;
    padding: 20px;
  }
  .calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
  }
  .calendar-header button {
    background-color: #f2f2f2;
    border: none;
    padding: 10px;
    cursor: pointer;
    font-size: 1em;
  }
  .calendar-header .current-month-year {
    font-size: 1.5em;
    font-weight: bold;
  }
  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    grid-gap: 1px;
    background-color: #ddd;
  }
  .day-header, .day-cell {
    padding: 10px;
    background-color: #fff;
    border: 1px solid #ddd;
  }
  .day-header {
    background-color: #f9f9f9;
    font-weight: bold;
  }
  .day-cell {
    min-height: 80px;
    position: relative;
  }
  .day-cell.today {
    background-color: #e0f7fa;
  }
  .day-cell:nth-child(7n+1) {
    background-color: #f9f9f9;
  }
  .event {
    position: absolute;
    bottom: 5px;
    left: 5px;
    right: 5px;
    background-color: #ffeb3b;
    padding: 2px 5px;
    font-size: 0.8em;
    border-radius: 3px;
  }
</style>

<!-- Calendar Wrapper -->
<div class="calendar-container">
  <!-- Month and Year Display -->
  <div class="calendar-header">
    <button class="prev-month" onclick="changeMonth(-1)">&#9664;</button>
    <span class="current-month-year">{{ 'now' | date: "%B %Y" }}</span>
    <button class="next-month" onclick="changeMonth(1)">&#9654;</button>
  </div>

  <!-- Calendar Grid -->
  <div class="calendar-grid">
    <div class="day-header">Sun</div>
    <div class="day-header">Mon</div>
    <div class="day-header">Tue</div>
    <div class="day-header">Wed</div>
    <div class="day-header">Thu</div>
    <div class="day-header">Fri</div>
    <div class="day-header">Sat</div>

    <!-- JavaScript will dynamically fill this area with day cells -->
  </div>

  <!-- Quick Navigation Buttons -->
  <div class="quick-nav">
    <button onclick="goToToday()">Today</button>
    <button onclick="changeView('month')">Month View</button>
    <button onclick="changeView('week')">Week View</button>
    <button onclick="changeView('day')">Day View</button>
  </div>
</div>

<script>
  let currentDate = new Date();

  function changeMonth(direction) {
    currentDate.setMonth(currentDate.getMonth() + direction);
    updateCalendar();
  }

  function goToToday() {
    currentDate = new Date();
    updateCalendar();
  }

  function changeView(view) {
    alert('Switching to ' + view + ' view');
  }

  function updateCalendar() {
    const monthYearElement = document.querySelector('.current-month-year');
    monthYearElement.textContent = currentDate.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });

    const firstDayOfMonth = new Date(currentDate.getFullYear(), currentDate.getMonth(), 1);
    const daysInMonth = new Date(currentDate.getFullYear(), currentDate.getMonth() + 1, 0).getDate();
    const firstWeekDay = firstDayOfMonth.getDay();

    let dayCounter = 1 - firstWeekDay;
    const calendarGrid = document.querySelector('.calendar-grid');
    calendarGrid.innerHTML = `
      <div class="day-header">Sun</div>
      <div class="day-header">Mon</div>
      <div class="day-header">Tue</div>
      <div class="day-header">Wed</div>
      <div class="day-header">Thu</div>
      <div class="day-header">Fri</div>
      <div class="day-header">Sat</div>
    `;

    for (let week = 0; week < 6; week++) {
      for (let day = 0; day < 7; day++) {
        let dayCell = document.createElement('div');
        dayCell.className = 'day-cell';
        
        if (dayCounter > 0 && dayCounter <= daysInMonth) {
          dayCell.textContent = dayCounter;
          if (dayCounter === new Date().getDate() && currentDate.getMonth() === new Date().getMonth()) {
            dayCell.classList.add('today');
          }
          // Example event
          if (dayCounter === 15) {
            let eventDiv = document.createElement('div');
            eventDiv.className = 'event';
            eventDiv.textContent = 'Latte Art Class';
            dayCell.appendChild(eventDiv);
          }
        }
        calendarGrid.appendChild(dayCell);
        dayCounter++;
      }
    }
  }

  document.addEventListener('DOMContentLoaded', updateCalendar);
</script>
