        },
        {
          "label": "Slider",
          "value": "slider"
        }
      ],
      "default": "grid"
    },
    {
      "type": "select",
      "id": "section_heading_layout",
      "label": "Section Heading Layout",
      "options": [
        {
          "label": "Left",
          "value": "section-heading--left"
        },
        {
          "label": "Center",
          "value": "section-heading--center"
        }
      ],
      "default": "section-heading--center"
    }
  ],
  "presets": [
    {
