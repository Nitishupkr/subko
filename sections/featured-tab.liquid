        }
    </style>
    <div class="grid grid--layout {{ section.settings.layout }}">
      {% for product in section.settings['feature-collection3'].products %}
      <div class="grid__item" style="width: calc(100%/var(--product-column3)); padding: 10px;">
          <a href="{{ product.handle }}"><img src="{{ product.featured_image | img_url: 'medium' }}"></a>
          <a href="{{ product.handle }}">
              <h3>{{ product.title }}</h3>
          </a>
