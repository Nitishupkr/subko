        {% endfor %}
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelector('.tab1').addEventListener('click', function (e) {
            e.preventDefault();
            document.getElementById('collection1').classList.remove('hidden');
            document.getElementById('collection2').classList.add('hidden');
            document.getElementById('collection3').classList.add('hidden');
            document.getElementById('collection4').classList.add('hidden');
            document.querySelector('.tab1').classList.add('active-tab');
            document.querySelector('.tab2').classList.remove('active-tab');
            document.querySelector('.tab3').classList.remove('active-tab');
            document.querySelector('.tab4').classList.remove('active-tab');
        });

        document.querySelector('.tab2').addEventListener('click', function (e) {
            e.preventDefault();
            document.getElementById('collection1').classList.add('hidden');
            document.getElementById('collection2').classList.remove('hidden');
            document.getElementById('collection3').classList.add('hidden');
            document.getElementById('collection4').classList.add('hidden');
            document.querySelector('.tab1').classList.remove('active-tab');
            document.querySelector('.tab2').classList.add('active-tab');
            document.querySelector('.tab3').classList.remove('active-tab');
            document.querySelector('.tab4').classList.remove('active-tab');
        });

        document.querySelector('.tab3').addEventListener('click', function (e) {
            e.preventDefault();
            document.getElementById('collection1').classList.add('hidden');
            document.getElementById('collection2').classList.add('hidden');
            document.getElementById('collection3').classList.remove('hidden');
            document.getElementById('collection4').classList.add('hidden');
            document.querySelector('.tab1').classList.remove('active-tab');
            document.querySelector('.tab2').classList.remove('active-tab');
            document.querySelector('.tab3').classList.add('active-tab');
            document.querySelector('.tab4').classList.remove('active-tab');
        });

        document.querySelector('.tab4').addEventListener('click', function (e) {
            e.preventDefault();
            document.getElementById('collection1').classList.add('hidden');
            document.getElementById('collection2').classList.add('hidden');
            document.getElementById('collection3').classList.add('hidden');
            document.getElementById('collection4').classList.remove('hidden');
            document.querySelector('.tab1').classList.remove('active-tab');
            document.querySelector('.tab2').classList.remove('active-tab');
            document.querySelector('.tab3').classList.remove('active-tab');
            document.querySelector('.tab4').classList.add('active-tab');
        });
    });
</script>

