<style>
.tab-heading {
    display: flex;
    justify-content: space-between; /* Increase distance between tabs */
    margin-top: {{ section.settings.top_margin }}px; /* Apply top margin */
    margin-bottom: {{ section.settings.bottom_margin }}px; /* Apply bottom margin */
}

.tab-heading h2 {
    position: relative;
    margin: 0;
    padding: 0 10px; /* Additional padding for vertical line spacing */
}

    .tab-heading h2::after {
        content: '';
        position: absolute;
      right: calc(-{{ section.settings.tab_spacing }}px / 2);

        top: 50%;
        transform: translateY(-50%);
        height: 50%;
        width: 1px;
        background-color: #B5B5B5;
    }

    .tab-heading h2:last-child::after {
        display: none; /* No vertical line after the last tab */
    }

    .tab-heading img {
        height: auto;
        cursor: pointer;
    }

    .tab-indicator {
        display: flex;
        flex-wrap: wrap;
    }

    .hidden {
        display: none;
    }

    .active-tab img {
        opacity: 0.7; /* Example effect for active tab */
    }
</style>

<div>
    <div class="tab-heading">
        <div>
            <h2>
                <a href="#" class="tab1 active-tab">
                    <img src="{{ section.settings.image1 | img_url: 'small' }}" alt="{{ section.settings.heading1 }}" style="width: {{ section.settings.image_width1 }}px;">
                </a>
            </h2>
        </div>

        <div>
            <h2>
                <a href="#" class="tab2">
                    <img src="{{ section.settings.image2 | img_url: 'small' }}" alt="{{ section.settings.heading2 }}" style="width: {{ section.settings.image_width2 }}px;">
                </a>
            </h2>
        </div>

        <div>
