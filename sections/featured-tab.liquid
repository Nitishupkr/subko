      "settings": [
        {
          "type": "text",
          "id": "tab_label",
          "label": "Tab Label",
          "default": "Tab"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Featured Collection"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Showcase your best products"
        },
        {
          "type": "range",
          "id": "products_number",
          "label": "Number of Products",
          "min": 1,
          "max": 10,
          "default": 4
        },
        {
          "type": "checkbox",
          "id": "show_view_all",
          "label": "Show 'View All' Button",
          "default": true
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
