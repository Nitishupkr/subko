<style>
    .tab-heading{
      display: flex;
      justify-content: center;
      gap: 40px;
    }
  .tab1{
    color: #000;
    text-decoration: none;
  }
    .tab2{
    color: #000;
    text-decoration: none;
  }
    .tab-indicator{
      display: flex;
      flex-wrap: wrap;
    }
</style>
<div>
  <div class="tab-heading">
    <div>
      <h2>
        <a href="#" class="tab1">{{ section.settings.heading1 }}</a>
      </h2>
    </div>

    <div>
      <h2>
        <a href="#" class="tab2">{{ section.settings.heading2 }}</a>
      </h2>
    </div>
  </div>

  <div class="page-width tab-indicator" id="collection1">
    <style>
      :root{
        --product-column: {{ section.settings.product-show1 }};
      }
    </style>
    {% for product in section.settings['feature-collection'].products %}
      <div style="width: calc(100%/var(--product-column)); padding: 10px;">
        <a href="{{ product.handle }}"><img src="{{ product.featured_image | img_url: "medium"}}"></a>
        <a href="{{ product.handle }}">
          <h3>{{ product.title }}</h3>
        </a>
        <p>{{ product.price | money_with_currency }}</p>
      </div>
    {% endfor %}
  </div>

  <!-- second tab coding -->
  <div class="page-width tab-indicator" id="collection2">
    <style>
      :root{
        --product-column2: {{ section.settings.product-show2 }};
      }
    </style>
    {% for product in section.settings['best-collection'].products %}
      <div style="width: calc(100%/var(--product-column2)); padding: 10px;">
        <a href="{{ product.handle }}"><img src="{{ product.featured_image | img_url: "medium"}}"></a>
        <a href="{{ product.handle }}">
          <h3>{{ product.title }}</h3>
        </a>
        <p>{{ product.price | money_with_currency }}</p>
      </div>
    {% endfor %}
  </div>
</div>
<script>
  $(document).ready(function (){
    $("#collection2").hide();
    $(".tab2").on('click', function(e){
      event.preventDefault();
      $('.tab-indicator').toggle();
    });
     $(".tab1").on('click', function(e){
       event.preventDefault();
       $('.tab-indicator').toggle();
    });
  });
</script>
{% schema %}
{
  "name": "Tab Section",
  "settings": [
    {
      "type": "text",
      "id": "heading1",
      "label": "Heading One"
    },
    {
      "type": "collection",
      "id": "feature-collection",
      "label": "Collection One"
    },
    {
      "type": "range",
      "id": "product-show1",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Products Per Row",
      "default": 4
    },
    {
      "type": "header",
      "content": "Second Tab Settings"
    },
    {
      "type": "text",
      "id": "heading2",
      "label": "Heading Two"
    },
    {
      "type": "collection",
      "id": "best-collection",
      "label": "Collection Two"
    },
    {
      "type": "range",
      "id": "product-show2",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Products Per Row",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Tab Section"
    }
  ]
}
{% endschema %}