<style>
.tab-heading {
    display: flex;
    justify-content: center;
    gap: {{ section.settings.tab_spacing }}px;
    margin-top: 20px; /* Adjust this value as needed for the top margin spacing */
}

.tab-heading h2 {
    position: relative;
    margin: 0;
    padding: 0 10px; /* Additional padding for vertical line spacing */
}

.tab-heading h2::after {
    content: '';
    position: absolute;
    right: calc(-{{ section.settings.tab_spacing }}px / 2);
    top: 50%;
    transform: translateY(-50%);
    height: 100%; /* Full height */
    width: 1px; /* Line width */
    background-color: #B5B5B5; /* Line color */
}

.tab-heading h2:last-child::after {
    display: none; /* No vertical line after the last tab */
}

.tab-heading img {
    height: auto;
    cursor: pointer;
}

.tab-heading hr {
    width: 100%;
    border: none;
    border-top: 1px solid #B5B5B5;
    margin: 5px 0; /* Adjust margin for spacing as needed */
}

.tab-indicator {
    display: flex;
    flex-wrap: wrap;
}

.hidden {
    display: none;
}

.active-tab img {
    opacity: 0.7; /* Example effect for active tab */
}

/* Responsive Styles */
@media (max-width: 768px) {
    .tab-heading {
        overflow-x: auto;
        white-space: nowrap;
        flex-wrap: nowrap;
        gap: 10px;
    }

    .tab-heading h2::after {
        display: none; /* Hide vertical lines on mobile */
    }

    .tab-heading img {
        width: 80px;
        flex: 0 0 auto;
    }

    .tab-heading {
        flex-direction: row;
    }
}
</style>

