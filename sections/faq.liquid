{%- ########################################################################## 
    # Label: Image Picker 0
    # Returns: an image object or nil(if no selection has been made)
    # Image Properties: https://shopify.dev/api/liquid/objects#image
    # Image Filters: https://shopify.dev/api/liquid/filters#image_tag, https://shopify.dev/api/liquid/filters#image_url
    ########################################################################## -%}
    {%- assign image_picker_0 = section.settings.image_picker_0 -%}
    {{ image_picker_0 | image_url: width: image_picker_0.width | image_tag: class: 'add_your_class_here', loading: 'lazy' }}
    
    {%- ########################################################################## 
    # Label: Select 1
    # Returns a string. i.e. the value of the selected option
    # Filters: https://shopify.dev/api/liquid/objects#string
    ########################################################################## -%}
    {{ section.settings.select_1 }} 
    
    {% schema %}
      {
      "name": "Code In Shopify Section",
      "settings": [
        {
          "type": "image_picker",
          "label": "Image Picker 0",
          "id": "image_picker_0"
        },
        {
          "type": "select",
          "label": "Select 1",
          "id": "select_1"
        }
      ],
      "presets": [
        {
          "name": "Code In Shopify Section"
        }
      ]
    }  
    {% endschema %}
    
    {% stylesheet %}
    {% endstylesheet %}
    
    {% javascript %}
    {% endjavascript %}